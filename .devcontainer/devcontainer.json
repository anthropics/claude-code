{
  "name": "Claude Code Sandbox",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TZ": "${localEnv:TZ:America/Los_Angeles}"
    }
  },
  "runArgs": ["--cap-add=NET_ADMIN", "--cap-add=NET_RAW"],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "ms-vscode.vscode-typescript-next",
        "rust-lang.rust-analyzer",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "tamasfe.even-better-toml",
        "redhat.vscode-yaml",
        "unifiedjs.vscode-mdx",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "aaron-bond.better-comments",
        "streetsidesoftware.code-spell-checker",
        "steoates.autoimport",
        "usernamehw.errorlens",
        "ms-vscode-remote.remote-containers",
        "ms-vscode-remote.remote-ssh",
        "ms-vscode-remote.remote-wsl",
        "ms-vscode.remote-explorer",
        "ms-azuretools.vscode-containers",
        "eamodio.gitlens",
        "github.remotehub",
        "github.vscode-pull-request-github",
        "github.vscode-github-actions",
        "github.copilot",
        "github.copilot-chat",
        "saoudrizwan.claude-dev",
        "aiqubit.claude",
        "codeontherocks.claude-config",
        "ms-vscode.vscode-websearchforcopilot",
        "ms-azuretools.vscode-azure-github-copilot",
        "ms-windows-ai-studio.windows-ai-studio",
        "wallabyjs.console-ninja",
        "block.vscode-mcp-extension",
        "automatalabs.copilot-mcp",
        "semanticworkbenchteam.mcp-server-vscode",
        "buildwithlayer.mcp-integration-expert-eligr",
        "sanchaii.devlinker-mcp-host",
        "mechatroner.rainbow-csv",
        "mtxr.sqltools",
        "bradlc.vscode-tailwindcss",
        "dsznajder.es7-react-js-snippets",
        "pulkitgangwar.nextjs-snippets",
        "mikestead.dotenv",
        "ms-ceintl.vscode-language-pack-de",
        "ms-dotnettools.vscode-dotnet-runtime",
        "mindaro-dev.file-downloader",
        "solana-developers.solana-vs-code-extension-pack",
        "ms-vscode.azure-repos",
        "augment.vscode-augment",
        "belfz.search-crates-io",
        "fill-labs.dependi",
        "rubenverg.bootstrap-product-icons",
        "skyramp.skyramp",
        "DBCode.dbcode",
        "AutomataLabs.copilot-mcp",
        "donjayamanne.githistory",
        "MS-CEINTL.vscode-language-pack-de",
        "SemanticWorkbenchTeam.mcp-server-vscode",
        "buildwithlayer.mcp-integration-expert-ELIGR"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "remoteUser": "node",
  "mounts": [
    "source=claude-code-bashhistory,target=/commandhistory,type=volume",
    "source=claude-code-config,target=/home/node/.claude,type=volume"
  ],
  "remoteEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  "postCreateCommand": "sudo /usr/local/bin/init-firewall.sh"
}
