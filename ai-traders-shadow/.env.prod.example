# Production Environment Variables for AI Trader's Shadow
# Copy this file to .env.prod and fill in your production values

# ==============================================================================
# DATABASE
# ==============================================================================
DB_PASSWORD=your_strong_database_password_here

# ==============================================================================
# SECURITY
# ==============================================================================
# Generate a strong secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_strong_secret_key_here_minimum_32_characters

# ==============================================================================
# EXCHANGE (Paper Trading)
# ==============================================================================
# Binance API credentials (for paper trading / testnet)
EXCHANGE_API_KEY=your_binance_api_key_here
EXCHANGE_API_SECRET=your_binance_api_secret_here

# ==============================================================================
# TELEGRAM BOT (Optional)
# ==============================================================================
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Get your chat ID from @userinfobot
TELEGRAM_ADMIN_CHAT_ID=your_telegram_chat_id_here

# ==============================================================================
# DOMAIN (Optional - for production with domain)
# ==============================================================================
# DOMAIN_NAME=yourdomain.com
# SSL_EMAIL=your-email@example.com
