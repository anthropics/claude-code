{
  "description": "Dependency security hooks - warns about risky package operations",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/validate-package-install.sh",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
