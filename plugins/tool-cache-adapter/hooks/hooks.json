{
  "description": "Tool result caching adapter â€” caches idempotent tool results to avoid redundant execution",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Bash|Grep|Glob|WebFetch|WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/cache_lookup.py",
            "timeout": 3
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Read|Bash|Grep|Glob|WebFetch|WebSearch|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/cache_store.py",
            "timeout": 3
          }
        ]
      }
    ]
  }
}
