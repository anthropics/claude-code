{
  "description": "Security reminder hook that warns about potential security issues when editing files and blocks git commits with secrets",
  "hooks": {
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/security_reminder_hook.py"
          }
        ],
        "matcher": "Edit|Write|MultiEdit"
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/git_pre_commit_hook.py",
            "timeout": 30
          }
        ],
        "matcher": "Bash"
      }
    ]
  }
}
