{
  "description": "Database migration safety hooks - validates migrations before execution",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/validate-migration-command.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
