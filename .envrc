# direnv entrypoint at repo root.
# Load order:
# 1) config/env        (preferred; git-ignored)
# 2) ./.env.shared     (optional alternate; ensure it's git-ignored)

set -a
if [ -f "./config/env" ]; then
  . "./config/env"
elif [ -f "./.env.shared" ]; then
  . "./.env.shared"
fi
set +a
echo "direnv: root env loaded for $(pwd)"

